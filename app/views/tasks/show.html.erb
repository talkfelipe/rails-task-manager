<div class="container border mt-3 shadow align-items-center p-3">
  <h1 class="m-3"><%= @task.title  %></h1>
  <div class="p-3 border d-flex justify-content-between align-items-center bg-secondary-subtle">
    <div class="d-flex align-items-center">
      <input class="form-check-input" type="checkbox" <%= "checked" if @task.completed%> >
      <h3 class="mb-0 ms-2"><%= @task.details  %></h3>
    </div>
    <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>
<div class="container mt-3 align-items-center">
  <%= link_to "My tasks", "/tasks", class: "btn btn-primary" %>
  <%= link_to "Edit task", edit_task_path(@task), class: "btn btn-primary" %>
</div>
